{
  "manifest_version": 2,
  "name": "AV History Killer",
  "description": "A Firefox WebExtension which deletes AV browsing history automatically.",
  "version": "0.0.1",
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "icons": {
    "48": "assets/img/icon-48.png",
    "96": "assets/img/icon-128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "assets/img/icon-16.png",
      "48": "assets/img/icon-48.png",
      "128": "assets/img/icon-128.png"
    },
    "default_title": "AV History Killer",
    "default_popup": "index.html"
  },
  "permissions": [
    "history",
    "storage",
    "tabs"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
